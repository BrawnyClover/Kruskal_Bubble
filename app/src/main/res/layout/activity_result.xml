<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sonbill.project.ResultActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Your Score"
    android:id="@+id/scoreText"
    android:textAlignment="center"
    android:layout_marginTop="60dp"
    android:textSize="20sp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/scoreResult"
        android:textAlignment="center"
        android:layout_marginTop="23dp"
        android:textSize="60sp"
        android:layout_below="@+id/scoreText"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Passed"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="69dp"
        android:id="@+id/timeText"
        android:layout_below="@+id/scoreResult"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/timePassedText"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        android:textSize="60sp"
        android:layout_below="@+id/timeText"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Play Again?"
        android:textAlignment="center"
        android:id="@+id/playAgainText"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/timePassedText"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/replayButton"
        android:text="YES"
        android:layout_below="@+id/playAgainText"
        android:layout_toStartOf="@+id/exitButton"
        android:onClick="replayGame"
        android:layout_marginEnd="80dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_marginEnd="73dp"
        android:layout_alignBaseline="@+id/replayButton"
        android:layout_alignBottom="@+id/replayButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/exitButton"
        android:onClick="exitGame"/>
</RelativeLayout>
